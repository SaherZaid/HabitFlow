<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="HabitFlow.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:HabitFlow.Pages"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent Title="Today"
                  ContentTemplate="{DataTemplate pages:TodayPage}" />
        <ShellContent Title="History"
                  ContentTemplate="{DataTemplate pages:HistoryPage}" />
        <ShellContent Title="Stats"
                  ContentTemplate="{DataTemplate pages:StatsPage}" />
        <ShellContent Title="Reminders"
                  ContentTemplate="{DataTemplate pages:RemindersPage}" />
    </TabBar>



</Shell>
