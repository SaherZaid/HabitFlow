<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitFlow.Pages.StatsPage"
             Title="Stats">

    <Grid Padding="20" RowDefinitions="Auto,*" RowSpacing="14">

        <!-- Header -->
        <Grid ColumnDefinitions="*,Auto">
            <Label Text="Stats"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Label Grid.Column="1"
                   Text="{Binding TodayText}"
                   Opacity="0.7"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Content -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="14">

                <!-- Top cards: Today + Week -->
                <Grid ColumnDefinitions="*,*" ColumnSpacing="12">

                    <!-- Today card -->
                    <Frame Padding="14" CornerRadius="18">
                        <VerticalStackLayout Spacing="10">

                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Text="âœ…"
                                       FontSize="20"
                                       VerticalOptions="Center" />
                                <Label Grid.Column="1"
                                       Text="Today"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <Label Text="{Binding TodayPercentText}"
                                   FontSize="32"
                                   FontAttributes="Bold"/>

                            <ProgressBar Progress="{Binding ProgressValue}" />

                            <Label Text="{Binding ProgressText}"
                                   Opacity="0.7"
                                   FontSize="12"/>

                        </VerticalStackLayout>
                    </Frame>

                    <!-- Week card -->
                    <Frame Grid.Column="1" Padding="14" CornerRadius="18">
                        <VerticalStackLayout Spacing="10">

                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="10">
                                <Label Text="ðŸ“…"
                                       FontSize="20"
                                       VerticalOptions="Center" />
                                <Label Grid.Column="1"
                                       Text="This week"
                                       FontAttributes="Bold"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <Label Text="{Binding WeekPercentText}"
                                   FontSize="32"
                                   FontAttributes="Bold"/>

                            <ProgressBar Progress="{Binding WeekProgressValue}" />

                            <Label Text="{Binding WeekSummaryText}"
                                   Opacity="0.7"
                                   FontSize="12"/>

                        </VerticalStackLayout>
                    </Frame>

                </Grid>

                <!-- Best Habit card -->
                <Frame Padding="14" CornerRadius="18">
                    <VerticalStackLayout Spacing="10">

                        <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="10">
                            <Label Text="ðŸ…"
                                   FontSize="20"
                                   VerticalOptions="Center" />

                            <Label Grid.Column="1"
                                   Text="Best habit"
                                   FontAttributes="Bold"
                                   VerticalOptions="Center"/>

                            <Label Grid.Column="2"
                                   Text="ðŸ”¥"
                                   FontSize="18"
                                   VerticalOptions="Center"
                                   Opacity="0.8"/>
                        </Grid>

                        <Label Text="{Binding BestHabitText}"
                               FontSize="18"
                               FontAttributes="Bold" />

                        <Label Text="Keep it going â€” consistency beats motivation."
                               Opacity="0.65"
                               FontSize="12"/>

                    </VerticalStackLayout>
                </Frame>

                <!-- Achievements section -->
                <Grid ColumnDefinitions="*,Auto" Margin="0,6,0,0">
                    <Label Text="Achievements"
                           FontSize="16"
                           FontAttributes="Bold" />

                    <Label Grid.Column="1"
                           Text="{Binding Achievements.Count, StringFormat='{0} total'}"
                           Opacity="0.7"
                           VerticalOptions="Center"/>
                </Grid>

                <!-- Unlocked list -->
                <Frame Padding="14" CornerRadius="18">
                    <VerticalStackLayout Spacing="12">

                        <Label Text="Unlocked"
                               FontAttributes="Bold"
                               Opacity="0.8"/>

                        <CollectionView ItemsSource="{Binding Achievements}"
                                        SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto"
                                          ColumnSpacing="12"
                                          IsVisible="{Binding IsUnlocked}">

                                        <Label Text="{Binding Icon}"
                                               FontSize="22"
                                               VerticalOptions="Center"/>

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Title}"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Description}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="2"
                                               Text="Unlocked"
                                               FontSize="12"
                                               Opacity="0.7"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Empty state (if none unlocked yet) -->
                        <Label Text="No achievements unlocked yet â€” your first one is close âœ…"
                               FontSize="12"
                               Opacity="0.6">
                            <Label.Triggers>
                                <DataTrigger TargetType="Label"
                                             Binding="{Binding Achievements}"
                                             Value="{x:Null}">
                                    <Setter Property="IsVisible" Value="True"/>
                                </DataTrigger>
                            </Label.Triggers>
                        </Label>

                    </VerticalStackLayout>
                </Frame>

                <!-- Locked list -->
                <Frame Padding="14" CornerRadius="18">
                    <VerticalStackLayout Spacing="12">

                        <Label Text="Locked"
                               FontAttributes="Bold"
                               Opacity="0.8"/>

                        <CollectionView ItemsSource="{Binding Achievements}"
                                        SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Vertical" ItemSpacing="10"/>
                            </CollectionView.ItemsLayout>

                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="Auto,*,Auto"
                                          ColumnSpacing="12"
                                          Opacity="0.55"
                                          IsVisible="{Binding IsUnlocked, Converter={StaticResource InvertBoolConverter}}">

                                        <Label Text="ðŸ”’"
                                               FontSize="20"
                                               VerticalOptions="Center"/>

                                        <VerticalStackLayout Grid.Column="1" Spacing="2">
                                            <Label Text="{Binding Title}"
                                                   FontAttributes="Bold" />
                                            <Label Text="{Binding Description}"
                                                   FontSize="12"
                                                   Opacity="0.7"/>
                                        </VerticalStackLayout>

                                        <Label Grid.Column="2"
                                               Text="Locked"
                                               FontSize="12"
                                               Opacity="0.7"
                                               VerticalOptions="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                    </VerticalStackLayout>
                </Frame>

                <Label Text="Tip: streaks are built one day at a time."
                       Opacity="0.6"
                       HorizontalOptions="Center"
                       Margin="0,6,0,0"/>

            </VerticalStackLayout>
        </ScrollView>

    </Grid>
</ContentPage>
