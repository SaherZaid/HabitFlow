<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitFlow.Pages.DayDetailsPage"
             Title="Day details">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*" RowSpacing="14">

        <!-- Title -->
        <VerticalStackLayout Spacing="6">
            <Label Text="{Binding DayDetailsTitle}"
                   FontSize="22"
                   FontAttributes="Bold"/>

            <Label Text="{Binding DayDetailsSummary}"
                   Opacity="0.8"/>
        </VerticalStackLayout>

        <!-- Small actions -->
        <Grid Grid.Row="1" ColumnDefinitions="*,Auto">
            <Label Text="Habits"
                   FontSize="16"
                   FontAttributes="Bold"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- List -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding DayDetailsHabits}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          Padding="12"
                          Margin="0,0,0,10">

                        <Label Text="{Binding StatusIcon}"
                               FontSize="18"
                               VerticalOptions="Center"/>

                        <Label Grid.Column="1"
                               Text="{Binding Name}"
                               FontSize="18"
                               VerticalOptions="Center"
                               Margin="10,0,0,0"/>

                        <Label Grid.Column="2"
                               Text="{Binding StatusText}"
                               Opacity="0.7"
                               VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
