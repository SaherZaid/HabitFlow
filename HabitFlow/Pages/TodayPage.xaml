<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitFlow.Pages.TodayPage"
             x:Name="TodayPageRef"
             Title="Today">

    <Grid Padding="20" RowDefinitions="Auto,Auto,*" RowSpacing="14">

        <!-- Header -->
        <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" RowSpacing="6">
            <Label Text="{Binding TodayText}"
                   FontSize="22"
                   FontAttributes="Bold" />

            <Button Grid.Column="1"
                    Text="+ Add"
                    Command="{Binding AddHabitCommand}" />

            <Label Grid.Row="1"
                   Grid.ColumnSpan="2"
                   Text="Today's habits"
                   FontSize="16"
                   Opacity="0.8"/>
        </Grid>

        <!-- Progress -->
        <VerticalStackLayout Grid.Row="1" Spacing="8">
            <ProgressBar Progress="{Binding ProgressValue}" />
            <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">
                <Label Text="{Binding ProgressText}" Opacity="0.8" />
                <Button Grid.Column="1"
                        Text="Reset"
                        Command="{Binding ResetTodayCommand}" />
            </Grid>
        </VerticalStackLayout>

        <!-- List (this scrolls) -->
        <CollectionView Grid.Row="2"
                        ItemsSource="{Binding Habits}"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid ColumnDefinitions="*,Auto,Auto,Auto"
                          Padding="12"
                          Margin="0,0,0,10">

                        <Label Text="{Binding Name}"
                               FontSize="18"
                               VerticalOptions="Center" />

                        <Label Grid.Column="1"
                               Text="{Binding Streak, StringFormat='ðŸ”¥ {0}'}"
                               VerticalOptions="Center"
                               Opacity="0.8"
                               Margin="10,0,10,0"/>

                        <CheckBox Grid.Column="2"
                                  IsChecked="{Binding IsDone}"
                                  CheckedChanged="OnHabitCheckedChanged"
                                  VerticalOptions="Center" />

                        <Button Grid.Column="3"
                                Text="Delete"
                                Margin="10,0,0,0"
                                Command="{Binding BindingContext.DeleteHabitCommand, Source={x:Reference Name=TodayPageRef}}"
                                CommandParameter="{Binding .}" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
